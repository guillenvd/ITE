<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/informacion"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:scaleType="fitXY"
            android:src="@drawable/ite_menu"
            android:onClick="onClickMenu"
            />

        <ImageView
            android:id="@+id/calificaciones"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/calificaciones"
            android:onClick="onClickMenu"
            />

        <ImageView
            android:id="@+id/horario"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/horario"
            android:onClick="onClickMenu"
            />

        <TextView
            android:id="@+id/feed"
            android:layout_margin="3dp"
            android:text="Feed"
            android:gravity="center"
            android:background="#3875D6"
            android:textColor="#ffffff"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:textSize="24dip"
            android:layout_gravity="center"
            android:onClick="onClickMenu"

            />

        <ImageView
            android:id="@+id/noticias"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/news"
            android:onClick="onClickMenu"
            />


        <ImageView
            android:id="@+id/mapa"
            android:layout_margin="3dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/mapa"
            android:onClick="onClickMenu"
            />


        <TextView
            android:id="@+id/directorio"
            android:layout_margin="3dp"
            android:text="Directorio"
            android:gravity ="center"
            android:background="#3875D6"
            android:textColor="#ffffff"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:textSize="24dip"
            android:layout_gravity="center"
            android:onClick="onClickMenu"

            />

        <ImageView
            android:id="@+id/actividades"
            android:layout_margin="3dp"
            android:layout_rowSpan="2"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/actividades"
            android:onClick="onClickMenu"
            />


    </GridLayout>

    </ScrollView>
</RelativeLayout>
